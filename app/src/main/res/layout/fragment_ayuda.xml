<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/volverAtras"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iconovolver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ayuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Ayuda"
            android:textAppearance="@style/styleAppbar"
            app:layout_constraintStart_toEndOf="@+id/volverAtras"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="#C0C0C0"
            app:layout_constraintTop_toBottomOf="@+id/ayuda"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />

        <TextView
            android:id="@+id/contactaConNosotros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Contacta con nosotros"
            android:textAppearance="@style/styleContactarConNosotros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linea" />

        <View
            android:id="@+id/fondoTelefono"
            android:layout_width="211dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/fondorojo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactaConNosotros" />

        <ImageView
            android:id="@+id/iconoLlamar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/iconollamada"
            app:layout_constraintBottom_toBottomOf="@id/fondoTelefono"
            app:layout_constraintStart_toStartOf="@+id/fondoTelefono"
            app:layout_constraintTop_toTopOf="@+id/fondoTelefono"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:text="634657853"
            android:textAppearance="@style/styleBlanco"
            app:layout_constraintBottom_toBottomOf="@+id/fondoTelefono"
            app:layout_constraintEnd_toEndOf="@+id/fondoTelefono"
            app:layout_constraintStart_toEndOf="@+id/iconoLlamar"
            app:layout_constraintTop_toTopOf="@+id/fondoTelefono"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/fondoGmail"
            android:layout_width="211dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/fondorojo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fondoTelefono" />

        <ImageView
            android:id="@+id/iconoEmail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/iconoemail"
            app:layout_constraintBottom_toBottomOf="@id/fondoGmail"
            app:layout_constraintStart_toStartOf="@+id/fondoGmail"
            app:layout_constraintTop_toTopOf="@+id/fondoGmail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ibermotor@gmail.com"
            android:textAppearance="@style/styleBlanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fondoGmail"
            app:layout_constraintStart_toEndOf="@+id/iconoEmail"
            app:layout_constraintTop_toTopOf="@+id/fondoGmail"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
