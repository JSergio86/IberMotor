<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment"
    android:scrollbars="none"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/fondoPerfil"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#1F9D00"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/volverAtras"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/volveratrasperfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/perfilText"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:gravity="top"
            android:text="Perfil"
            android:textSize="20dp"
            android:textAppearance="@style/perfil"
            app:layout_constraintEnd_toEndOf="@+id/fondoPerfil"
            app:layout_constraintStart_toStartOf="@+id/fondoPerfil"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/campanita"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/iconocampanita"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iconoperfiluserchat"
            app:layout_constraintEnd_toEndOf="@+id/fondoPerfil"
            app:layout_constraintStart_toStartOf="@+id/fondoPerfil"
            app:layout_constraintTop_toBottomOf="@+id/perfilText"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nombreJuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfil" />

        <ImageView
            android:id="@+id/ubicacionImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iconoubicacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombreJuan" />

        <TextView
            android:id="@+id/ubicacionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="08911, Badalona, Barcelona"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ubicacionImage"
            app:layout_constraintTop_toBottomOf="@+id/nombreJuan" />

        <ImageView
            android:id="@+id/calendario"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/iconocalendario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ubicacionImage" />

        <TextView
            android:id="@+id/calendarioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:text="Se unio en 2018"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/calendario"
            app:layout_constraintTop_toBottomOf="@+id/ubicacionText" />

        <TextView
            android:id="@+id/anuncions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Anuncios"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendario" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anuncions">

            <View
                android:id="@+id/cuadroInfoCoche_dodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fotoCoche_dodge"
                android:layout_width="160dp"
                android:layout_height="109dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dodge"
                app:layout_constraintEnd_toEndOf="@+id/cuadroInfoCoche_dodge"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cuadroInfoCoche_dodge"
                app:layout_constraintTop_toTopOf="@+id/cuadroInfoCoche_dodge"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/nombreInfolinear_dodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/fotoCoche_dodge"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/nombreText_dodge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dodge Challenger"
                    android:textAppearance="@style/nameVistaSecundaria" />

                <RelativeLayout
                    android:id="@+id/atributosLayout_dodge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center">


                    <TextView
                        android:id="@+id/ciudadText_dodge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="2dp"
                        android:text="Badalona -"
                        android:textAppearance="@style/styleGris" />


                    <TextView
                        android:id="@+id/kilometrosText_dodge"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginRight="2dp"
                        android:layout_toRightOf="@id/ciudadText_dodge"
                        android:text="93.000km"
                        android:textAppearance="@style/styleGris" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/atributosLayoutAbajoDodge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    app:layout_constraintStart_toEndOf="@+id/fotoCocheDodge"
                    app:layout_constraintTop_toBottomOf="@+id/atributosLayoutDodge">

                    <TextView
                        android:id="@+id/añosTextDodge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:text="2016 -"
                        android:textAppearance="@style/styleGris" />

                    <TextView
                        android:id="@+id/combustibleTextDodge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_toRightOf="@id/añosTextDodge"
                        android:text="Gasolina"
                        android:textAppearance="@style/styleGris" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/precioGarantiaLinearDodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/garantiaDodge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garantia 1 año"
                    android:textAppearance="@style/garantia" />

                <TextView
                    android:id="@+id/precioTextDodge"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="42.999€"
                    android:textAppearance="@style/precioVista2"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>