<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FiltrosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/volverAtras"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iconovolver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Filtros"
            android:textAppearance="@style/styleAppbar"
            app:layout_constraintStart_toEndOf="@+id/volverAtras"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="#C0C0C0"
            app:layout_constraintTop_toBottomOf="@+id/filtros"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />


        <LinearLayout
            android:id="@+id/marcaLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linea">

            <TextView
                android:id="@+id/marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Marca"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/modeloLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marcaLinear">

            <TextView
                android:id="@+id/modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Modelo"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerModelo"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/versionLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modeloLinear">

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="VersiÃ³n"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerVersion"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ciudadLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/versionLinear">

            <TextView
                android:id="@+id/ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Ciudad"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerCiudad"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/precioLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ciudadLinear">


            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Precio"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerPrecioDesde"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerPrecioHasta"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kilometrajeLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/precioLinear">


            <TextView
                android:id="@+id/kilometraje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Kilometraje"
                android:textAppearance="@style/styleAppbar" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerKilometraje"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:ms_background_color="#D9D9D9"/>

        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>