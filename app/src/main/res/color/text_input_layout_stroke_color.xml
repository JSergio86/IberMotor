<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando está enfocado -->
    <item android:color="@color/mtrl_textinput_default_box_stroke_color" android:state_focused="true" />

    <!-- Estado cuando se mantiene pulsado -->
    <item android:color="@color/mtrl_textinput_default_box_stroke_color" android:state_hovered="true" />

    <!-- Estado cuando está deshabilitado -->
    <item android:color="@color/mtrl_textinput_default_box_stroke_color" android:state_enabled="false" />

    <!-- Estado por defecto (sin enfocar) -->
    <item android:color="@color/mtrl_textinput_default_box_stroke_color" />
</selector>
