<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialAPP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lila</item>
        <item name="colorPrimaryVariant">@color/GrisitemDeseleccionado</item>
        <item name="colorOnPrimary">@color/GrisitemDeseleccionado</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/GrisitemDeseleccionado</item>
        <item name="colorSecondaryVariant">@color/GrisitemDeseleccionado</item>
        <item name="colorOnSecondary">@color/GrisitemDeseleccionado</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SocialAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/iconobusqueda</item>
        <item name="stIconEnd">@drawable/iconoemail</item>
        <item name="stLength">@integer/material_motion_duration_long_1</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="CustomMaterialSpinner">
        <item name="backgroundTint">@drawable/edittext_background</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


